#
# /usr/share/satest/satest.yml
#
# Generated by Chef for <%= node['fqdn'] %>
#

http:
  port: <%= node['application']['http-port'] %>
  adminPort: <%= node['application']['adminPort'] %>

logging:

  # The default level of all loggers. Can be OFF, ERROR, WARN, INFO, DEBUG, TRACE, or ALL.
  level: <%= node['application']['logging']['level'] %>

  # Logger-specific levels.
  loggers:

    # Overrides the level of com.example.dw.Thing and sets it to DEBUG.
    "com.spaceape": <%= node['application']['logging']['loggers']['com.spaceape'] %>

  # ...
  # Settings for logging to stdout.
  console:

    # If true, write log statements to stdout.
    enabled: <%= node['application']['logging']['console']['enabled'] %>

  # ...
  # Settings for logging to a file.
  file:

    # If true, write log statements to a file.
    enabled: <%= node['application']['logging']['file']['enabled'] %>

    # The file to which current statements will be logged.
    currentLogFilename: <%= node['application']['logging']['file']['currentLogFilename'] %>

    # When the log file rotates, the archived log will be renamed to this and gzipped. The
    # %d is replaced with the previous day (yyyy-MM-dd). Custom rolling windows can be created
    # by passing a SimpleDateFormat-compatible format as an argument: "%d{yyyy-MM-dd-hh}".
    archivedLogFilenamePattern: <%= node['application']['logging']['file']['archivedLogFilenamePattern'] %>

    # The number of archived files to keep.
    archivedFileCount: <%= node['application']['logging']['file']['archivedFileCount'] %>

    # The timezone used to format dates. HINT: USE THE DEFAULT, UTC.
    timeZone: <%= node['application']['logging']['file']['timeZone'] %>
